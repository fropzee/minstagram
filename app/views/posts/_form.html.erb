<%= form_for @post, html: { multipart: true } do |f| %>
<div class="form-group">
    <%= f.file_field :image, class: 'form-control-file' %>
    <%= f.hidden_field :image_cache %>
</div>

<div class="form-group">
    <%= f.text_area :description, class: 'form-control', placeholder: "Add description" %>
</div>   

<%= f.submit "Save Post", class: 'btn btn-outline-success btn-sm' %>

<% end %>