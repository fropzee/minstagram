<div class="container">
    <div class="row">
        <div class="col-4">
            <%= profile_picture @user, 200 %>
        </div>
        <div class="col-8 text-left">
            <h1> <%= @user.full_name %> </h1>
            <%= link_to "Edit", edit_user_registration_path, class: 'btn btn-outline-secondary btn-sm' if can_edit?(@user.id) %>
            <div class="profile-count"><%= @user.posts.count %> posts</div>
            <div class="profile-count"><%= @user.total_followers %> followers</div>
            <div class="profile-count"><%= @user.total_following %> following</div>
        </div>
    </div>
    <div class="row profile-posts">
        <% @posts.each do |post| %>
            <div class="col-4">
                <div class="profile-post">
                    <%= image_tag post.image.url, class: "img img-fluid" %>
                </div>
            </div>
        <% end %>
    </div>
</div>

